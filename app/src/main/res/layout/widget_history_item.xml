<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <!-- 左侧小部件图标 -->
    <ImageView
        android:id="@+id/widget_icon"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:contentDescription="小部件图标"
        android:src="@mipmap/ic_launcher" />

    <!-- 中间信息区域 -->
    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/widget_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="名称: 小部件名称"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="尺寸: 中"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/trigger_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="触发方式: 点击"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/feedback_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="反馈方式: 跳转应用"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="应用: 示例应用"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 操作按钮区域（添加和删除） -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/add_to_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:text="添加到主页"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>